<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <type name="Magento\Payment\Model\MethodList">
        <arguments>
            <argument name="methods" xsi:type="array">
                <item name="custom_payment" xsi:type="string">Custom\CustomPayment\Model\PaymentMethod</item>
            </argument>
        </arguments>
    </type>

    <type name="Custom\PaymentMethod\Model\PaymentMethod">
        <arguments>
            <argument name="httpClientFactory" xsi:type="object">Custom\CustomPayment\HttpClient\Factory</argument>
        </arguments>
    </type>
	
	<type name="Magento\Checkout\Model\CompositeConfigProvider">
		<arguments>
			<argument name="configProviders" xsi:type="array">
				<item name="custompayment" xsi:type="object">Custom\CustomPayment\Model\Ui\ConfigProvider</item>
			</argument>
		</arguments>
	</type>

</config>
